<div class="container p-4">
    <div class="card animate__animated animate__slideInRight animate_delay_3s">
        <div class="card-header bg-dark text-white">
            <h4><i class="fas fa-calculator"></i> Búsqueda</h4>
        </div>
        <div class="card-body">
            <div class="form-inline">
                <div class="form-group ">
                    <label class="sr-only" for="codigo_tdp">Código TDP</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-tag"></i>
                            </div>
                        </div>
                        <input type="text" class="form-control col-md-8" id="codigo_tdp" placeholder="Codigo TDP" autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary" id="btnBuscar">
                        <i class="fas fa-search"></i> Buscar
                    </button>
                </div>
                <div class="form-group ml-4">
                    <button class="btn btn-block btn-success" id="btnLimpiar">
                        <i class="fas fa-broom"></i> Limpiar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-2 animate__animated animate__slideInLeft animate_delay_3s">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-flag-checkered"></i> Tentativa de Campaña</h4>
        </div>
        <div class="card-body text-center">
            <blockquote id="tentativa-campania">
                <div class="row">
                    <div class="col-md-4">
                        <img src="" alt="Imagen-Vehículo">
                    </div>
                    <div class="col-md-8">
                        <form action="">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="modelo">Modelo</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="modelo" placeholder="Modelo" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="anio">Año</label>
                                <div class="col-sm-8">
                                    <input class="form-control" type="text" id="anio" placeholder="Año" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="campania1">Campaña TDP 01</label>
                                <div class="col-sm-8 input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fas fa-dollar-sign"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="text" id="campania1" placeholder="Campaña 01" disabled>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="campania2">Campaña TDP 02</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" rows="3" id="campania2"  placeholder="Campaña 02" disabled></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label" for="precio">Precio Lista</label>
                                <div class="col-sm-8 input-group">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">
                                            <i class="fas fa-dollar-sign"></i>
                                        </div>
                                    </div>
                                    <input class="form-control" type="text" id="precio" placeholder="0.00" disabled>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </blockquote>

        </div>
    </div>

    <div class="card mt-2 animate__animated animate__slideInRight animate_delay_3s">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4><i class="fas fa-car"></i> Precio Venta</h4>
            <button class="btn btn-warning"><i class="fas fa-print"></i> Imprimir</button>
        </div>
        <div class="card-body text-center">
            <blockquote id="precio-final">
                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="precio">Precio</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                </div>
                                <input type="text" class="form-control" id="precioBruto" placeholder="0.00" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="">Campaña TDP</label>
                            <input type="text" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="">Precio Cliente</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">
                                        <i class="fas fa-dollar-sign"></i>
                                    </div>
                                </div>
                                <input type="text" class="form-control" id="precioVenta" placeholder="0.00" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </blockquote>
        </div>
    </div>
</div>