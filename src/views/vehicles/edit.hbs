<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/vehicles/edit/{{vehicle.id}}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="codigo_tdp" placeholder="Codigo TDP" value="{{vehicle.codigo_tdp}}" required
                                autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="modelo" placeholder="Modelo" value="{{vehicle.modelo}}" required
                                autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="numeric" name="anio" class="form-control" placeholder="Año" value="{{vehicle.anio}}" required>
                        </div>
                        <div class="form-group">
                            <input type="numeric" name="precio" class="form-control" placeholder="Precio" value="{{vehicle.precio}}" required>
                        </div>
                        <div class="form-group">
                            <input type="numeric" name="incentivo" class="form-control" placeholder="Incentivo" value="{{vehicle.incentivo}}" required>
                        </div>
                        <div class="form-group">
                            <textarea name="campania" rows="3" class="form-control" placeholder="Campaña"
                                >{{vehicle.campania}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>