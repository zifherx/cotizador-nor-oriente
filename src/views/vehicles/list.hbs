<div class="container p-2">
    <div class="row">
        {{#each vehicles}}
        <div class="col-md-3 p-2">
            <div class="">
                <div class="card text-center">
                    <div class="card-header text-white bg-dark">
                        <h5 class="card-title text-uppercase">
                            {{modelo}}
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="m-2">S/. {{precio}}</p>
                        <p>COD TDP: {{codigo_tdp}}</p>
                        <a href="/vehicles/delete/{{id}}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                        <a href="/vehicles/edit/{{id}}" class="btn btn-warning"><i class="far fa-edit"></i></a>
                    </div>
                </div>
            </div>

        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay vehículos creados aún.</p>
                <a href="/vehicles/add">Crea uno!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>